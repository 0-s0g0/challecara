rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === Analytics Collections ===

    // プロフィール閲覧数（匿名アクセス可）
    match /profileViews/{viewId} {
      allow create: if true; // 誰でも記録可能
      allow read: if request.auth != null
        && request.auth.uid == resource.data.userId; // 自分の分析データのみ閲覧可
    }

    // ソーシャルリンククリック（匿名アクセス可）
    match /linkClicks/{clickId} {
      allow create: if true; // 誰でも記録可能
      allow read: if request.auth != null
        && request.auth.uid == resource.data.userId; // 自分の分析データのみ閲覧可
    }

    // ブログ投稿閲覧数（匿名アクセス可）
    match /blogPostViews/{viewId} {
      allow create: if true; // 誰でも記録可能
      allow read: if request.auth != null; // ログインユーザーのみ閲覧可
    }
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read public profiles
      allow read: if true;
      // Only the user can create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // No deletes for now
      allow delete: if false;
    }

    // AccountId index
    match /accountIdIndex/{accountId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // UniqueId index (for public profile URLs)
    match /uniqueIdIndex/{uniqueId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Social links
    match /socialLinks/{linkId} {
      // Anyone can read
      allow read: if true;
      // Authenticated users can create their own social links
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Only the owner can update/delete their own social links
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Blog posts
    match /blogPosts/{postId} {
      // Anyone can read all posts (for public profiles)
      allow read: if true;
      // Authenticated users can create their own posts
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Only the owner can update/delete their own posts
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Profile secrets (秘密の暗号)
    match /profileSecrets/{userId} {
      // Anyone can read (needed for authentication check)
      allow read: if true;
      // Only the owner can create/update/delete
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
  }
}
